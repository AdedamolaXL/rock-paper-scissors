<!DOCTYPE html>
<html lang = 'en'>
<head>
  <title> ROCK PAPER SCISSORS GAME</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
 <div class="buttons">
  <button class = 'btn1'>Rock</button>
  <button class = 'btn2'>Paper</button>
  <button class = 'btn3'>Scissors</button>
 </div>


 <script>
  document.querySelector('.btn1').addEventListener('click', playRound);
  document.querySelector('.btn2').addEventListener('click', playRound);
  document.querySelector('.btn3').addEventListener('click', playRound);
    
  

  function playRound (e) {

    var gameChoices = ['Rock', 'Paper', 'Scissors'];
    

    var playerSelect = e.target.classList;
    var ps = playerSelect;
     

    function computerPlay () {
      return gameChoices[Math.floor(Math.random() * 3)];
    }
    var compSelect = computerPlay();
    var cs = compSelect;
    
    
    
      if ((cs == 'Rock' && ps == 'Scissors') || (cs == 'Paper' && ps == 'Scissors') || (cs == 'Scissors' && ps == 'Paper')) {
        
        return `Computer Wins! ${cs} beats ${ps}`;
      } else if (cs == ps) {
        return `This a tie: ${cs} - ${ps}`;
      } else {
        
        return `You Win! ${ps} beats ${cs}`;
      }
  }
  



   

 </script>
<body>
</html>